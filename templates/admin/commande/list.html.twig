{% extends "admin/base_admin.html.twig" %}

{% block body %}

<div class="container py-5">
    <div class="row ">
        <div class="col-12">
            <h3 class="text-center">
                Commandes
            </h3>
        </div>

        
        {% include "_messages_flash.html.twig" %}
      

        <div class="col-12 mt-3">

            <div class="card">
                <div class="card-body">
                
              

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Cde.</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Société</th>
                                        {# <th scope="col">Paiement</th> #}
                                       
                                        <th scope="col">Total</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>   
                                   
                                   {{ knp_pagination_render(commandShop,'@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
                                    {% for item in commandShop %}
                                        <tr>
                                            <td>
                                             <a href="{{ path('command_shop_detail',{'id': item.id }) }}" class="btn btn-link">
                                                    #{{ item.id }}
                                                </a>
                                                
                                            </td>
                                            <td>{{ item.createdAt | date('d-m-y') }}</td>
                                              <td>{{item.getDeliveryAddress().getRaisonSoc()   }}</td>   
                                            {# <td>
                                                {% if item.isPayed is same as false %}
                                                    <span class="text-secondary">Non payée</span>
                                                {% else %}
                                                     <span class="text-success">Payée</span>
                                                {% endif %}
                                            </td> #}
                                          
                                            <td>{{ item.totalPrice | euroPrice }}</td>
                                           
                                              <td>
                                                <a href="{{ path('command_shop_detail',{'id': item.id }) }}" class="btn btn-link">
                                                    <img src="/images/eye.svg" />
                                                </a>
                                              </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

    
                </div>
              
            </div>

        </div>
        
    </div>
</div>

{% endblock %}