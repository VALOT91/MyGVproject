{% extends "admin/base_admin.html.twig" %}

{% block body %}

<div class="container py-5">
    <div class="row ">
        <div class="col-12">
            <h3 class="text-center">
                Commandes
            </h3>
        </div>

        
        {% include "_messages_flash.html.twig" %}
      

        <div class="col-12 mt-3">

            <div class="card">
                <div class="card-body">
                
              

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">N°Commande</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Raison sociale</th>
                                        <th scope="col">Paiement</th>
                                        <th scope="col">Livraison</th>
                                        <th scope="col">Total</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>   
                                    {% for item in commandShop %}
                                        <tr>
                                            <td>
                                                {{ item.id }}
                                            </td>
                                            <td>{{ item.createdAt | date('d-M-Y') }}</td>
                                              <td>{{item.getDeliveryAddress().getRaisonSoc()   }}</td>   
                                            <td>
                                                {% if item.isPayed is same as false %}
                                                    <span class="text-secondary">Non payée</span>
                                                {% else %}
                                                     <span class="text-success">Payée</span>
                                                {% endif %}
                                            </td>
                                            <td></td>
                                            <td>{{ item.totalPrice | euroPrice }}</td>
                                           
                                              <td>
                                                <a href="{{ path('command_shop_detail',{'id': item.id }) }}" class="btn btn-link">
                                                    Consulter
                                                </a>
                                              </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

    
                </div>
              
            </div>

        </div>
        
    </div>
</div>

{% endblock %}