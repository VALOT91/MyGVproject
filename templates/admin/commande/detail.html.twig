{% extends "admin/base_admin.html.twig" %}

{% block body %}

<div class="container py-5">
    <div class="row ">
        <div class="col-12 mb-3">
            <a href="{{ path('command_shop_list') }}" class="btn btn-dark">Revenir à la liste</a>
        </div>
        <div class="col-12">
            <h3 class="text-center">
                Commande N°{{ commandShop.id }}
            </h3>
        </div>

        
        {% include "_messages_flash.html.twig" %}
      

        <div class="col-sm-12 col-md-6 mt-3">

            <div class="card">
                <div class="card-body">
                

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Produit</th>
                                        <th scope="col">Condit.</th>
                                        <th scope="col">Prix.Unit</th>
                                        <th scope="col" >Qté</th>
                                        <th scope="col">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in products %}    
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="d-flex flex-column align-items-center justify-content-center">
                                                         <p>{{ item.getProduct().designation  }}</p>
                                                    </div>
                                                </div>
                                            </td>
                                              <td>{{ item.getConditionnement() }}</td>
                                            <td>{{ item.getUnitPrice | euroPrice }}</td>
                                          
                                            <td>{{ item.getQte() }}</td>
                                            <td>{{ item.getTotal | euroPrice }}</td> 
                                        </tr>
                                    {% endfor%}
                                    
                                </tbody>
                            </table>
                            <div  class="text-end h5">
                                <strong>Sous-total: {{ commandShop.totalPrice | euroPrice }}</strong>
                            </div>
                        </div>
                </div>
                <div class="card-footer">
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 mt-3">
            <div class="card">
                <div class="card-header">
                    <h3>Adresse de livraison</h3>
                </div>
                <div class="card-body" style="line-height:12px">
                    <p><b>{{ commandShop.getDeliveryAddress().getRaisonSoc() | upper }}</b></p>
                    <p>{{ commandShop.deliveryAddress.street }}
                        {% if commandShop.deliveryAddress.complement is not null     %}
                            - {{ commandShop.deliveryAddress.complement }}
                        {% endif %}
                     </p>  
                    <p>{{ commandShop.deliveryAddress.postalCode }}  {{ commandShop.getDeliveryAddress.city | upper}} ({{ commandShop.getDeliveryAddress().getCountry() | upper }})</p> 
                    <hr>                  
                    <p><b>Commentaire :</b> {{ commandShop.deliveryAddress.commentary }}</p>  

                </div>
            </div>
            
        </div>
    </div>
</div>
{% endblock %}