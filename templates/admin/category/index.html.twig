
{% extends 'admin/base_admin.html.twig' %}

{% block title %}category index{% endblock %}

{% block body %}
 <div class="container-flex mx-2" >
    <h1 class ="ms-4 text-center ttreT">Liste des catégories</h1>

    <table class="table ">
        <thead>
            <tr>
                 <th class="textArt">Nom</th>
               
                 <th colspan=3 class="textArt text-center">Images</th>
                 <th class="textArt"> </th>
                 <th class="textArt"> </th>
                 <th colspan=2 class="text-center textArt"></th>
                 <th class="textArt"> </th>
            </tr>
        </thead>
        <tbody>
         {% for category in categories %}     {# boucle sur les catégories #}
            <tr>
               <div style="" >
                    <td   class="textArt  ">{{ category.nom }}</td>
                    <td  ><img colspan=3 class="listeImg" src="\{{ category.imagepath1 }}" alt=""  ></td>
                    <td  ><img  class="listeImg" src="\{{ category.imagepath2 }}" alt=""  ></td>
                    <td  ><img class="listeImg"  src="\{{ category.imagepath3 }}" alt=""  ></td>
                    <td colspan=2 >
                        <a style="  max-width: 12rem !important;" class="buttonStyleC text-white px-4 mt-2 btn btn-success w-100 " href="{{ path('category_show', {'id': category.id}) }}">Détail</a>
                    </td>
                    <td>
                      <a style="max-width: 12rem !important;"  class="btnBackMod buttonStyleC text-white px-4 mt-2 btn  w-100" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                    </td>
              </div> 
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center col-12 mb-3 my-4">
            <a   href="{{ path('category_new') }}" class="btnBackEnr buttonStyleC text-white btn  ">Nouveau</a>
    </div>

</div>
{% endblock %}

