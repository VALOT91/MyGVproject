 

{% extends 'admin/base_admin.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}

     
<div class="container my-2">
    <div>
            <h1 style="margin-bottom:2rem"> Détail de la recette </h1>
    </div>
    <div class="row align-items-center">
                <div class="col-2 col-lg-2">
                     
                                <img class="ms-2" style="display:flex;width:3rem" src="{{ recette.imagePath }}" alt=""  >
                     
                </div>
                <div class="col-10 col-lg-10">
                    <table class="table">
                        <tbody>
                           
                            <tr>
                                <th>Nom</th>
                                <td>{{ recette.nom }}</td>
                            </tr>
                            <tr>
                                <th>Recette</th>
                                <td>{{ recette.description }}</td>
                            </tr>
                             <tr>
                                <th>Produit</th>
                                <td>{{ recette.getProduct().designation }}</td>
                            </tr>
                                
                        </tbody>
                    </table>
                </div> 
    </div>

    <a class="mt-2 btn btn-secondary" href="{{ path('recette_index') }}">retour à la liste</a>

    
</div>
{% endblock %}
