{% extends "base.html.twig" %}

{% block body %}

<div class="container py-5">
    <div class="row align-items-center justify-content-center">
        <div class="col-12">
            <h3 class="text-center">
                Mon panier
            </h3>
        </div>

        <div class="col-sm-12 col-md-10 col-lg-8 mt-3">
        {% include "_messages_flash.html.twig" %}
            <div class="card">
                <div class="card-body">
                    {% if cart | length > 0 %}

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Produit</th>
                                        <th scope="col">P.U</th>
                                        <th scope="col" >Qté</th>
                                        <th scope="col">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in cart["detailCart"] %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img style="border-radius:7px;objective-fit:cover;width:4rem" src=" {{ item.product.imagePath }}" alt="Image {{ item.product.getProduit().designation }}" class="imageProductCart">
                                                    <div class="pt-2">
                                                        <p class="ms-4"><b>{{ item.product.getProduit().designation }} {{ item.getConditionnement() }}</b> <br> <i>  Réf. {{ item.product.reference }} </i> </p> 
                                                        
                                                    
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                            <div>
                                                    {{ item.getPrice() | euroPrice }}</td>
                                            </div>
                                            <td>
                                                <a  style="border-radius:7px; " class="btn btn-success" href="{{ path('cart_decrement',{'id': item.product.id}) }}"><strong>-</strong></a>
                                                <button class="btn btn-light">{{ item.qty }}</button>
                                                <a style="border-radius:7px"  class="btn btn-success" href="{{ path('cart_add',{'id': item.product.id}) }}?returnToCart=true"><strong>+</strong></a>
                                            </td>
                                            <td>{{ item.total | euroPrice }}</td>
                                            <td>
                                                <a class="btn btn-link text-danger btn-sm" href="{{ path('cart_remove',{'id' : item.product.id }) }}"></i> 
                                                        <img  src="/images/trash.png"  style="width:1.4rem"  />
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    <tr>
                                        <th colspan="2"></th>
                                        <th><strong>Sous Total</strong></th>
                                        <th><strong>{{ cart['sousTotal'] | euroPrice }}</strong></th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-success" href="{{ path('gamme_index') }}">Continuer le shopping</a>
                            <a href="{{ path('command_recap') }}" class="btn btn-danger text-center">Finaliser ma commande</a>
                           
                        </div>

                    {% else %}
                        <p>Le panier est vide.</p>
                        <br/>
                      
                    {% endif  %}
                    
                </div>
            </div>

        </div>
    </div>
</div>

{% endblock %}