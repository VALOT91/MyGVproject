{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container my-2">
    <h1>Mon compte</h1>

    <table class="table">
        <tbody>
             <tr>
                <th>Email (Identifiant de connexion)</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Complement</th>
                <td>{{ user.complement }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.codePostal }}</td>
            </tr>
             <tr>
                <th>Ville</th>
                <td>{{ user.ville }}</td>
            </tr>
            
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
          
           <tr>
                <th>Pays</th>
                <td>{{ user.pays }}</td>
            </tr>
            <tr>
                <th>Kbis</th>
                <td>{{ user.kbis }}</td>
            </tr>
           <tr>
                <th>Statut</th>
                <td>
                  {% if user.roles[0] is same as "ROLE_TRANSIT" %}
                    <b><p class="text-warning ">En cours de validation</p> </b>
                  {% elseif app.user.roles[0] is same as "ROLE_CLIENT" %} 
                       <b> <p class="text-success w-25"> Client PRO</p></b>
                  {% elseif app.user.roles[0] is same as "ROLE_ADMIN" %} 
                     <b> <p class="text-primary"> Administrateur</p></b>
                 {% endif %} 
                </td>
            </tr>
            <tr>
                <th>Points fidelite</th>
                <td>{{ user.pointsFidelite }}</td>
            </tr>
            
            <tr>
                <th>Rang fidelite</th>
                <td>{{ user.rangFidelite }}</td>
            </tr>
            
        </tbody>
    </table>
    <a class=" btn btn-danger ms-2"
     {% if app.user.roles[0] is same as "ROLE_ADMIN" %}
            href="{{ path('edit_password_A') }}"> 
    {% elseif app.user.roles[0] is same as "ROLE_TRANSIT" %}
            href="{{ path('edit_password_T') }}"> 
    {% elseif app.user.roles[0] is same as "ROLE_CLIENT" %} 
            href="{{ path('edit_password_C') }}"> 
    {% endif %} 
     Modifier le mot de passe  </a> 
    <a class="btn btn-secondary ms-4" href="{{ path('home') }}">Retour</a>
     
  </div>
    
{% endblock %}
