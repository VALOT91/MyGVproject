{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="container-flex mx-4 ">
  <div class="my-2 ">
    <h1 class="ttreT text-center my-4">Mon compte</h1>
   <div class="my-2">
        <table class="table textArt mx-2">
            <tbody>
                <tr>
                    <th>Email (Identifiant de connexion)</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ user.prenom }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ user.adresse }}</td>
                </tr>
                <tr>
                    <th>Complement</th>
                    <td>{{ user.complement }}</td>
                </tr>
                <tr>
                    <th>Code postal</th>
                    <td>{{ user.codePostal }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ user.ville }}</td>
                </tr>
                
                <tr>
                    <th>Telephone</th>
                    <td>{{ user.telephone }}</td>
                </tr>
            
            <tr>
                    <th>Pays</th>
                    <td>{{ user.pays }}</td>
                </tr>
                <tr>
                    <th>Kbis</th>
                    <td>{{ user.kbis }}</td>
                </tr>
            <tr>
                    <th>Statut</th>
                    <td>
                    {% if user.roles[0] is same as "ROLE_TRANSIT" %}
                        <b><p class="text-warning ">En cours de validation</p> </b>
                    {% elseif app.user.roles[0] is same as "ROLE_CLIENT" %} 
                        <b> <p class="text-success w-25"> Client PRO</p></b>
                    {% elseif app.user.roles[0] is same as "ROLE_ADMIN" %} 
                        <b> <p class="text-primary"> Administrateur</p></b>
                    {% endif %} 
                    </td>
                </tr>
                <tr>
                    <th>Points fidelite</th>
                    <td>{{ user.pointsFidelite }}</td>
                </tr>
                
                <tr>
                    <th>Rang fidelite</th>
                    <td>{{ user.rangFidelite }}</td>
                </tr>
                
            </tbody>
        </table>
      </div>
     <div class="d-flex flex-row justify-content-around  ">
                <a class="buttonStyle btn btn-success ms-2 mt-4"
                {% if app.user.roles[0] is same as "ROLE_ADMIN" %}
                        href="{{ path('edit_password_A') }}"> 
                {% elseif app.user.roles[0] is same as "ROLE_TRANSIT" %}
                        href="{{ path('edit_password_T') }}"> 
                {% elseif app.user.roles[0] is same as "ROLE_CLIENT" %} 
                        href="{{ path('edit_password_C') }}"> 
                {% endif %} 
                Mot de passe 
             </a> 
             <a class="buttonStyle  btn btn-dark ms-4 mt-4" href="{{ path('home') }}">Retour</a>
     </div>
    </div>
   </div>
    
{% endblock %}


