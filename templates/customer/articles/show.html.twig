{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{# traitement de la meta description pour le référencement #}
{% block head %}
  {{ parent() }}
  <meta name="description" content="{{'Article concernant le thé'|trans}}" />
{% endblock %} 

{% block body %}
<div class="container my-2">
    <div class="row align-items-center">
            <table class="">
                <tbody>
                    <tr>
                        <td class="textArt "> {{ article.titre }} </td>
                        <td> <td  class="textArt"><b class=" artTitre" >Date de création : </b>  {{ article.dateCreation ? article.dateCreation|date('d-m-Y') : '' }}</td></td>
                        <td class="textArt artTitre"><b >Dans </b>{{ article.categorie }}</td>
                  
                        <td>
                             <a class=" textArt btnRetArt btn btn-dark" href="{{ path('infosNews_liste') }}"> Retour</a>
                        </td>
                    </tr>
                </tbody>
            </table>
     </div> 
     
    
    

</div>
 <div style="height:5px!important" class="W-25 bg-secondary mx-2"></div>  
<div class="container-flex my-2">
    <div class="row align-items-center">
            {{ article.contenu | raw }}
    </div>
</div>
 
{% endblock %}
