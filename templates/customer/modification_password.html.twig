{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
   <div class="fnd container-flex py-5 px-5"> 
       
       <div class="formStyle" >
           <div class="formSize">
              <div class="bg-white " style="border-radius:7px;">
                <div class="text-center my-2 ">
                    <br>
                    <h1 class="ttreT my-2">Réinitialisation du mot de passe</h1>
                    <p class="mx-4 textArt"></p>
                </div>
                    <div class="d-flex flex-row justify-content-center ">
                        <div class="mx-4 w-75   ">
                          {{form_start(form)}}
                            
                            {{form_errors(form.plainPassword)}}
                            {{form_row(form.plainPassword, {'label': 'Mot de passe','label_attr': {'class': 'textArt'},'attr': {'class': 'inputStyle'} } )}}
                            
                             <div class="d-flex flex-row justify-content-around ">
                                    <button class="buttonStyle   btn btn-success mt-2 mb-4  w-40 " type="submit">
                                       Modifier
                                   </button>
                                     <a type="button" href="{{ path("home")}}" class="buttonStyle btn btn-dark mt-2 mb-4 w-40">
                                        Annuler
                                    </a>  
                            </div>
                            <br>
                          {{form_end(form)}}
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div>


{% endblock %}


